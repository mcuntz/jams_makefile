# Set aliases so that one can, for example, say ifort to invoke standard intel11 on eve
ifneq (,$(findstring $(compiler),pgi pgi17 pgi171 pgfortran pgfortran17))
    icompiler := pgfortran171
endif
ifneq (,$(findstring $(compiler),gnu gfortran gcc gfortran72 gcc72))
    icompiler := gnu72
endif
ifneq (,$(findstring $(compiler),nag nagfor nagfor61))
    icompiler := nag61
endif
