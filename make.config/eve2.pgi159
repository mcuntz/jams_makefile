# The Makefile assumes the standard bin, include and lib directories
# i.e. if SOMEDIR = /path/to/lib, the make file will define the two dirs
#   SOMEINC ?= SOMEDIR/include
#   SOMELIB ?= SOMEDIR/lib
# Define subirectories if another structure

# Paths
PGIDIR := /usr/local/pgi/linux86-64/15.9
PGILIB := $(PGIDIR)/lib
PGIBIN := $(PGIDIR)/bin

# Compiling
F90 := $(PGIBIN)/pgfortran
FC  := $(F90)
CC  := /usr/bin/gcc
CPP := /usr/bin/cpp
# -Ktrap=align|denorm|divz|fp|inexact|inv|none|ovf|unf
#                     Determine IEEE Trap conditions
ifeq ($(release),debug)
    F90FLAGS += -C -g -Mbounds -Mchkptr -Mchkstk -traceback -Mchkfpstk -Mstandard -Mdclchk
    FCFLAGS  += -C -g -Mbounds -Mchkptr -Mchkstk -traceback -Mchkfpstk -Mstandard -Mdclchk
    CFLAGS   += -pedantic -Wall -W -O -g -Wno-uninitialized # -ffpe-trap=invalid,zero,overflow,underflow,inexact,denormal
else
    # -fast = -O2 -Munroll=c:1 -Mnoframe -Mlre -Mautoinline -Mvect=sse -Mcache_align -Mflushz -Mpre
    # -Mipa=fast = -Mipa=align,arg,const,f90ptr,shape,libc,globals,localarg,alias,ptr,pure
    # -Mvect=sse gives problems with xor4096, other CHS modules work with flag
    F90FLAGS += -fast -Mipa=fast,inline -Mnovect
    FCFLAGS  += -fast -Mipa=fast,inline -Mnovect
    CFLAGS   += -O3
endif
F90FLAGS += -Mpreprocess -Mfreeform -tp=x64
FCFLAGS  += -Mfixed -tp=x64
CFLAGS   +=
MODFLAG  := -module # space significant
DEFINES  += -DpgiFortran
LDFLAGS  += -pgf90libs

# Linking
LIBS += -L$(PGILIB)
RPATH += -Wl,-rpath,$(PGILIB)

# IMSL
IMSLDIR :=

# MKL
MKLDIR :=
MKL95DIR :=

# NETCDF
ifeq ($(netcdf),netcdf3)
    # NCDIR := /usr/local/netcdf/3.6.3_pgi_15.9
    NCDIR :=
else
    # ZLIB    := /usr/local/zlib/1.2.8_pgi_15.9/lib
    # SZLIB   := /usr/local/szip/2.1_pgi_15.9/lib
    # HDF5LIB := /usr/local/hdf5/1.8.12_pgi_15.9/lib
    # NCDIR   := /usr/local/netcdf/4.3.2_pgi_15.9
    # NCFDIR  := /usr/local/netcdf-fortran/4.2_pgi_15.9
    ZLIB    :=
    SZLIB   :=
    HDF5LIB :=
    NCDIR   :=
    NCFDIR  :=
endif

# PROJ
PROJ4DIR := /usr/local/proj/4.7.0
FPROJDIR :=

# LAPACK
LAPACKDIR   := $(PGILIB)
GFORTRANDIR := /usr/local/gcc/4.8.1-3_CentOS6/
GFORTRANLIB := $(GFORTRANDIR)/lib64

# MPI
# MPIDIR := /usr/local/openmpi/pgi/1.8.4
MPIDIR :=

# Documentation
DOXYGENDIR := /usr/local/doxygen/1.8.7-1_gcc_4.8.1_CentOS6/bin
DOTDIR     := /usr/bin
TEXDIR     := /usr/local/texlive/2011/bin/x86_64-linux
PERLDIR    := /usr/bin
iiLDPATH := /usr/local/flex/2.5.39-1_gcc_4.8.1_CentOS6/lib:/usr/local/bison/3.0.2-1_gcc_4.8.1_CentOS6/lib
ifneq ($(LDPATH),)
    LDPATH += :$(iiLDPATH)
else
    LDPATH := $(iiLDPATH)
endif
