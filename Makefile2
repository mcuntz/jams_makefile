# -*- Makefile -*-

SHELL = /bin/bash

.SUFFIXES: .f90 .o

all: $(PROG)

$(PROG): $(OBJS) $(FOROBJS)
	$(LD) $(LDFLAGS) -o $(PROG) $(OBJS) $(FOROBJS) $(LIBS)

$(OBJS): $(OBJPATH)/%.o: %.f90
	$(F90) $(DEFINES) $(INCLUDES) $(F90FLAGS) -c $< -o $@

$(FOROBJS): $(OBJPATH)/%.o: %.for
	$(FC) $(DEFINES) $(INCLUDES) $(FCFLAGS) -c $< -o $@

# All dependencies create by perl script makedeps.pl
include $(OBJPATH)/make.deps
